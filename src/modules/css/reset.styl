.delIcon{
  position: relative;
  width: 15px!important;
  height: 15px;
  background: #bfbfbf!important;
  border-radius: 50%!important;
  box-shadow: none!important;
  top: 1.2px;
}
.delIcon::before,.delIcon::after{
  position: absolute;
  top: 50%;
  left: 1.6px;
  margin-top: -1.2px;
  background: #fff;
  width: 75%;
  height:2px;
  content: '';
}
.delIcon::before{
  transform: rotate(45deg);
}
.delIcon::after{
  transform: rotate(-45deg);
}

